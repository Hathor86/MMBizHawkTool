        <Components:Item x:Name="bottle4" Grid.Column="3" Grid.Row="3" Source="/MMBizHawkTool;component/Resources/Icons/Items/Empty Bottle.png" />
        <Components:Item x:Name="bottle5" Grid.Column="4" Grid.Row="3" Source="/MMBizHawkTool;component/Resources/Icons/Items/Empty Bottle.png" />
