        <Components:Item x:Name="magicBean" Grid.Column="4" Grid.Row="1" Source="/MMBizHawkTool;component/Resources/Icons/Items/Magic Beans.png" AmmoVisibility="True" />
        <Components:Item x:Name="questItem2" Grid.Column="5" Grid.Row="1" />
        <Components:Item x:Name="powderKeg" Grid.Column="0" Grid.Row="2" Source="/MMBizHawkTool;component/Resources/Icons/Items/Powder Keg.png" AmmoVisibility="True" />
        <Components:Item x:Name="pictoBox" Grid.Column="1" Grid.Row="2" Source="/MMBizHawkTool;component/Resources/Icons/Items/Pictograph Box.png" AmmoVisibility="True" />
        <Components:Item x:Name="lensOfTruth" Grid.Column="2" Grid.Row="2" Source="/MMBizHawkTool;component/Resources/Icons/Items/Lens of Truth.png" />
        <Components:Item x:Name="hookshot" Grid.Column="3" Grid.Row="2" Source="/MMBizHawkTool;component/Resources/Icons/Items/Hookshot.png" />
        <Components:Item x:Name="greatFairySword" Grid.Column="4" Grid.Row="2" Source="/MMBizHawkTool;component/Resources/Icons/Items/Great Fairy's Sword.png" />
        <Components:Item x:Name="questItem3" Grid.Column="5" Grid.Row="2" />
