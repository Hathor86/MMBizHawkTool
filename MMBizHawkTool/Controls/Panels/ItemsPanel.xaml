        <Components:Item x:Name="questItem1" Grid.Column="5" Grid.Row="0" />
        <Components:Item x:Name="bomb" Grid.Column="0" Grid.Row="1" Source="/MMBizHawkTool;component/Resources/Icons/Items/Bomb.png" AmmoVisibility="True" />
        <Components:Item x:Name="bombchu" Grid.Column="1" Grid.Row="1" Source="/MMBizHawkTool;component/Resources/Icons/Items/Bombchu.png" AmmoVisibility="True" />
        <Components:Item x:Name="dekuStick" Grid.Column="2" Grid.Row="1" Source="/MMBizHawkTool;component/Resources/Icons/Items/Deku Stick.png" AmmoVisibility="True" />
