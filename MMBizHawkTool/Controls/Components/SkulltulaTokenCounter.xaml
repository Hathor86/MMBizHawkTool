<UserControl x:Class="MMBizHawkTool.Controls.Components.SkulltulaTokenCounter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MMBizHawkTool.Controls.Components"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="50*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*" />
            <RowDefinition Height="50*" />
        </Grid.RowDefinitions>
        
        <local:BorderedLabel x:Name="locationLabel" Grid.ColumnSpan="2" Grid.Row="0" Grid.Column="0" />
        <Image x:Name="tokenImage" Grid.Column="0" Grid.Row="1" Source="/MMBizHawkTool;component/Resources/Icons/Quest/Gold Skulltula Token.png" />
        <Label x:Name="tokenCounter" Content="00" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="/MMBizHawkTool;component/Resources/Fonts/#DejaVu Sans Mono" />
    </Grid>
</UserControl>
